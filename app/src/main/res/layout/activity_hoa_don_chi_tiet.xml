<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".themActivity.HoaDonChiTiet">

    <EditText
        android:id="@+id/edMaHoaDon1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã hóa đơn" />

    <EditText
        android:id="@+id/edMaSach1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Mã Sách" />

    <EditText
        android:id="@+id/edSoLuong1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Số lượng mua" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:onClick="ADDHoaDonCHITIET"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Thêm" />

        <Button
            android:onClick="thanhToanHoaDon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh Toán" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvThanhTien1"
        android:layout_marginTop="5dp"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thành tiền:" />

    <ListView
        android:id="@+id/lvHoaDonChiTiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" />

</LinearLayout>